<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table align="center">
  <thead>
    <tr>
      <td><b>Cut</b></td>
      <td><b>Wash</b></td>
      <td><b>Colour</b></td>
      <td><b>User</b></td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <h2>Search</h2>
  <div class="searchingclass">
    <form class="search"
    <%= form_for "", url: bookings_path, role: "search", method: :get do %>
    <%= text_field_tag :search, @search_term, placeholder: "Search..." %>
    <%= submit_tag "Search" %>
    <% end %>
    </form>
  </div>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.cut %></td>
        <td><%= booking.wash %></td>
        <td><%= booking.colour %></td>
        <td><%= booking.user.username %></td>
        <td><%= link_to 'Show', booking %></td>
        <% if current_user && current_user.admin || current_barber %>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= button_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-danger delete-btn" %></td>
        <% end %>
      </tr>
    <% end %>
    <td><%= link_to 'New Booking', new_booking_path %></td>
  </tbody>
</table>

<br>
